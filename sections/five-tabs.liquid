{% if section.blocks.size > 0 %}
<section class="tabs-wrapper">
  <h2>{{section.settings.tabs-title}}</h2>
  <div class="tabs-container">
    {% for block in section.blocks %}
    <div class="tab">
      <a id="tab-{{forloop.index}}" href="#tab{{forloop.index}}" class="tab-link">{{block.settings.TabText}}
      </a>
      <div id="tab{{forloop.index}}-panel" class="tab-panel" hidden>
        <img src="{{block.settings.TabImage | img_url: '360x240'}}" alt="">
        <h3>{{block.settings.TextInfo}}</h3>
        <p>{{block.settings.ExtraInfo}}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}



 <style>
    .tab-list a[aria-selected="true"] {
      color: #e80f88 !important;
      
    }

{% schema %}
{
  "name": "Tabs",
  "settings": [
    {
      "type":"text",
      "id":"tabs-title",
      "label": "Heading",
      "default":"Non Diam Phasellus Vestibulum"
    }
    ],
    "presets":[
      {
        "name": "five tabs",
        "category":"five tabs"
      }
    ],
    "blocks":[
      {
        "name": "tabs",
        "type":"tabs",
        "settings":[
          {
            "id":"TabImage",
            "type":"image_picker",
            "label":"Pick a image"
          },
          {
            "id":"TabText",
            "type":"text",
            "label":"TextHeading",
            "default":"pellentesque"
          },
          {
            "id":"TextInfo",
            "type":"textarea",
            "label":"Text Info",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elite."
          },
          {
            "id":"ExtraInfo",
