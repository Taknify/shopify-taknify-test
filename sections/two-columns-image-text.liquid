<section class="two-columns-image">
  <h2>{{section.settings.Heading}}</h2>
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="card">
            <div class="image-section">
              <img src="{{block.settings.Image |  img_url:'360X240'}}" alt="Image">
            </div>
            <div class="card-content">
              <h3>{{block.settings.TextTopic}}</h3>
              <p class="text-icons"> 
                <span class="icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18px" height="18px" viewBox="0 0 24 24" fill="none">
                  <path d="M23 12C23 18.0751 18.0751 23 12 23C5.92487 23 1 18.0751 1 12C1 5.92487 5.92487 1 12 1C18.0751 1 23 5.92487 23 12ZM3.00683 12C3.00683 16.9668 7.03321 20.9932 12 20.9932C16.9668 20.9932 20.9932 16.9668 20.9932 12C20.9932 7.03321 16.9668 3.00683 12 3.00683C7.03321 3.00683 3.00683 7.03321 3.00683 12Z" fill="#0F0F0F"/>
                  <path d="M12 5C11.4477 5 11 5.44771 11 6V12.4667C11 12.4667 11 12.7274 11.1267 12.9235C11.2115 13.0898 11.3437 13.2343 11.5174 13.3346L16.1372 16.0019C16.6155 16.278 17.2271 16.1141 17.5032 15.6358C17.7793 15.1575 17.6155 14.5459 17.1372 14.2698L13 11.8812V6C13 5.44772 12.5523 5 12 5Z" fill="#0F0F0F"/>
                  </svg>
                </span>
                {{block.settings.TextInfo}}</p>
                  <p>
                  <ul>
                    <li>{{block.settings.List1}}</li>
                    <li>{{block.settings.List2}}</li>
                    <li>{{block.settings.List3}}</li>
                  </ul>
                </p> 
                <div class="learn-more">
                  <a href="{{block.settings.LearnMore}}">Learn more</a>
                </div>
                <div class="column-button">
                  <div class="text">
                    {{block.settings.Text}}
                  </div>
                  <div class="button-text">
                    <a href="{{block.settings.Button}}">{{block.settings.ButtonName}}</a>
                  </div>
                </div>              
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="pagination-container">
      <div class="swiper-pagination"></div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="swiper-button-prev">
      <polygon points="15.293 3.293 6.586 12 15.293 20.707 16.707 19.293 9.414 12 16.707 4.707 15.293 3.293"/>
    </svg>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="swiper-button-next">
      <polygon points="7.293 4.707 14.586 12 7.293 19.293 8.707 20.707 17.414 12 8.707 3.293 7.293 4.707"/>
    </svg>
  </div>
  <div class="text-buttons">
     <h2> Sed Do Eiusmod Tempor Incididunt Ut?
     </h2>
  </div>
</section>

