<section class="image-text-container">
  <div class="container">
    <div class="image-section">
      <img src="{{section.settings.image| img_url:'1200X400'}}" alt="image">
    </div>
    <div class="text-section">
      <h2>{{section.settings.heading}}</h2>
      {%  for block in section.blocks %}
        <h2>{{block.settings.textdescription}}</h2>
        <p>{{block.settings.textdescription}}</p>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type":"image_picker",
      "id":"image",
      "label":"Pick image."
    },
    {
      "type": "text",
      "id":"heading",
      "label":"Heading",
      "default": "lacus viverra vitae congue eu consequat"
    }
    
    ],
  "blocks": [
    {
      "type": "textarea",
      "name":"TextBox",
      "settings":[
        {
          "type":"textarea",
          "id":"textdescription",
          "label":"Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Pellentesque habitant morbi tristique senectus et netus et malesuada fames. Ullamcorper eget nulla facilisi etiam dignissim diam quis enim lobortis"
        }
      ]
    }
  ],
  "presets": [
      {
        "name":"image-with-text",
        "category":"Image with text"
      }
    ]
}
{% endschema %}