        </svg>
      </a>
    </div>   
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="image-section">
            <img src="{{'front-image2.jpg' | asset_url }}" alt="Image">
            <div class="pagination-container">
              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="image-section">
            <img src="{{'front-image3.jpg' |asset_url }}" alt="Image">
            <div class="pagination-container">
              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="image-section">
            <img src="{{'front-page4.jpg' |asset_url }}" alt="Image">
            <div class="pagination-container">
              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="swiper-button-prev">
        <polygon points="15.293 3.293 6.586 12 15.293 20.707 16.707 19.293 9.414 12 16.707 4.707 15.293 3.293"/>
      </svg>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="swiper-button-next">
        <polygon points="7.293 4.707 14.586 12 7.293 19.293 8.707 20.707 17.414 12 8.707 3.293 7.293 4.707"/>
      </svg>
    </div>

    <div class="product-description">
      <h2>Latest Launches </h2>
      <h3>$360</h3>
       <div class="shade-selector">
        <label for="shades">Select Shade:</label>
        <select id="shades">
          <option value="shade1">Gray</option>
          <option value="shade2">Brown</option>
          <option value="shade3">Black</option>
          <option value="shade4">Yellow</option>
        </select>
       </div>
    </div>
  </section>
  <script src="{{'swiper-bundle.min.js'| asset_url}}"></script>   
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var swiperContainer = document.querySelector('.swiper-container');
      if (swiperContainer) {
        var swiper = new Swiper('.swiper-container', {
          loop: true,
          pagination: {
            el: '.swiper-pagination',
            renderCustom: function (swiper, current, total) {
    return '<span class="swiper-pagination-current">' + current + '</span> / <span class="swiper-pagination-total">' + total + '</span>';
  }
          },
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          slidesPerView: 1,
          breakpoints: {
            912: {
              slidesPerView: 3,
              spaceBetween: 10,
            },
            1024: {
              slidesPerView: 3,
              spaceBetween: 2, 
            },
          }
        });

          document.querySelector('.swiper-button-next').addEventListener('click', function (event) {
          event.preventDefault();
          event.stopPropagation();
        });
        document.querySelector('.swiper-button-prev').addEventListener('click', function (event) {
          event.preventDefault();
          event.stopPropagation();
        });
      } else {
        console.error('Swiper container not found');
      }
    });
  </script>
</body>
</html>